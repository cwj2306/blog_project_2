<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>

	<button onclick="sendPost2()">post 요청</button>
	<button onclick="sendPost3()">get 요청</button>

	<script>
		
		let postNum2 = 0;
		let postNum3 = 0;
		let sum = 0;
	
		function sendPost2() {
			var xhttp = new XMLHttpRequest();

			xhttp.onreadystatechange = function() {
				if (this.readyState == 4 && this.status == 200) {
					postNum2 = this.responseText;
					console.log('post2 : ' + postNum2);
				}
			};

			xhttp.open("POST", "http://localhost:8000/blog/test2", true);
			xhttp.setRequestHeader("Content-type", "text/plain");
			xhttp.send();
		}
		
		function sendPost3() {
			var xhttp = new XMLHttpRequest();

			xhttp.onreadystatechange = function() {
				if (this.readyState == 4 && this.status == 200) {
					postNum3 = this.responseText;
					console.log('post3 : ' + postNum3);
				}
			};

			xhttp.open("GET", "http://localhost:8000/blog/test3", true);
			xhttp.setRequestHeader("Content-type", "text/plain");
			xhttp.send();
		}
	</script>

</body>
</html>